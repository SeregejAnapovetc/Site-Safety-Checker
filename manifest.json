{
    "manifest_version": 3,
    "name": "Site Safety Checker",
    "version": "1.0",
    "description": "Показывает уведомление о безопасности сайта.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Site Safety Checker"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  